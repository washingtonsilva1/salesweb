@model IEnumerable<SalesWeb.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>Sellers</h2>

<p>Sellers Index page.</p>

<a asp-action="Create" style="margin-bottom: 10px" class="btn btn-default">Create New</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => x.Name)</td>
                <td>@Html.DisplayFor(modelItem => x.Email)</td>
                <td>@Html.DisplayFor(modelItem => x.BirthDate)</td>
                <td>@Html.DisplayFor(modelItem => x.BaseSalary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@x.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@x.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@x.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>